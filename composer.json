{
    "name": "smail-aouissa/paypal-checkout-sdk",
    "description": "Multi-provider PHP SDK for Payment Checkout APIs (PayPal & Stripe)",
    "keywords": [
        "phpjuice",
        "paypal",
        "stripe",
        "payment",
        "checkout",
        "multi-provider"
    ],
    "homepage": "https://phpjuice.gitbook.io/paypal-checkout-sdk",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "PHPJuice",
            "email": "phpjuice@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2|^8.3",
        "ext-json": "*",
        "brick/money": "^0.5.2",
        "phpjuice/paypal-http-client": "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.18",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "PayPal\\Checkout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/pest --colors=always",
        "analyse": "phpstan analyse --ansi --debug"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
